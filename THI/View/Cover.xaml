<UserControl x:Class="THI.Cover"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:THI"
             mc:Ignorable="d" 
             d:DesignHeight="510.86" Width="977.119">
    <Grid Margin="0,0,0,0">

        <Image x:Name="image" HorizontalAlignment="Left" Height="460" Margin="10,10,0,0" VerticalAlignment="Top" Width="910"  Source="/img/conv.jpg"/>
        <TextBox x:Name="textBox" Background="Transparent" AcceptsReturn="True" FontSize="17"  BorderBrush="Transparent" HorizontalAlignment="Left" Height="44" Margin="472,219,0,0" TextWrapping="Wrap" Text="{Binding Path=Letter.Where}" VerticalAlignment="Top" Width="424"/>
        <TextBox x:Name="textBox1" Background="Transparent" AcceptsReturn="True" FontSize="17"   BorderBrush="Transparent" HorizontalAlignment="Left" Height="71" Margin="472,268,0,0" TextWrapping="Wrap" Text="{Binding Path=Letter.ToWhom}" VerticalAlignment="Top" Width="424"/>


    </Grid>
</UserControl>
